<%= form_for @item, html: {multipart: true } do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h4>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container" id="instructions"> 

  <p><b>Instructions:</b></p>
  <li>Item Description Suggestions: Condition of item, How old is it? Model type (if relevant), Color,  Durability, etc.</li>
  <li>Item Size Suggestions: Dimensions in cm, Refernece to another standarrd sized object.</li>
  <li>One Image is mandatory, but multiple images are preferred.</li><br><br>

</div>

<div class="col-sm-6" id="additemsform">

  <div class="form-group">
    <%= f.label " " %> <b>Item Name*</b>
    <div><%= f.text_field :name, class:'form-control' %></div>
  </div>
    
  <div class="form-group">
    <%= f.label " " %> <b>Item Description/Specifications*</b>
    <div><%= f.text_area:description, class:'form-control' %></div>
  </div>

  <div class="form-group">
    <%= f.label " " %> <b>Item Size*</b>
    <div><%= f.text_field :size, class:'form-control' %></div>
  </div>

  <div class="form-group">
    <%= f.label " " %> <b>Item Weight*</b> (Kg)
    <div><%= f.text_field :weight, class:'form-control' %></div>
  </div> 

  <div class="form-group">
    <%= f.label :quantity %>*
    <div><%= f.text_field :quantity, class:'form-control' %></div>
  </div> 

</div>

<div class="col-sm-6" id="additemsform">

  <div class="form-group dropdown">
    <%= f.label :category_id %>*
    <div><%= f.collection_select  :category_id, Category.all,  :id , :name, :prompt => "Select category", class:'form-control' %></div>
  </div> 

  <div class="form-group">
    <%= f.label :daily_price %>* (QAR)
    <div><%= f.text_field :daily_price, class:'form-control' %></div>
  </div> 

  <div class="form-group">
    <%= f.label :weekly_price %>* (QAR)
    <div><%= f.text_field :weekly_price, class:'form-control' %></div>
  </div>

  <div class="form-group">
    <%= f.label :monthly_price %>* (QAR)
    <div><%= f.text_field :monthly_price, class:'form-control' %></div>
  </div> 

  <div class="form-group">
      <%= f.label :image %>*<br />
      <%= f.file_field :image, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image2 %><br />
    <%= f.file_field :image2, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image3 %><br />
    <%= f.file_field :image3, class:'form-control' %>
  </div>

</div>
  
  <div class="actions form-group">
    <%= f.submit id:'itemShowButt2' %>
    <%= link_to 'Cancel', items_path, class:'btn btn-default', id:"newItemBack" %>
    <br><br><br><br><br><br><br>
  </div>
    
<% end %>


