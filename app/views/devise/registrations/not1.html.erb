<h2>Login </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
<div class="container" style="background-color:#ffffff">
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_area :username %>
  </div>
  
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
</div>

<td button type="submit" class="btn btn-success">Login </td>
<td button type="submit" class="btn btn-danger">Cancel</td>